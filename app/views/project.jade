extends ./partials/base.jade

block bodyContent
    div(class="container-fluid project-container")
        div(class="row project-header")
            div(class="col-xs-12")
                h2 #{projName}
            div(class="col-xs-12 project-tabs")
                ul(class="col-xs-12 nav nav-tabs project-pages")
                    li(id="project-tab-4") #[a(href="#tasks" data-toggle="tab") Task List]
                    li(id="project-tab-3") #[a(href="#users" data-toggle="tab") User List]
                    li(id="project-tab-2" class="active" ) #[a(href="#kanban" data-toggle="tab") Kanban Board]
                    li(id="project-tab-1") #[a(href="#overview" data-toggle="tab") Overview]

        div(style="margin-top: 113px;")
        div(class="tab-content")
            div(id="tasks" class="tab-pane fade")
                include ./includes/project/tasks.jade
            div(id="users" class="tab-pane fade")
                include ./includes/project/users.jade           
            div(id="kanban" class="tab-pane fade in active")
                include ./includes/project/kanban.jade
            div(id="overview" class="tab-pane fade")
                include ./includes/project/overview.jade

block scripts
    script(src="/javascripts/project.js")
