div(class="overview-container")
	h2 Project Overview
	table(class="table table-hover")
		tbody
			tr
				th Project Name:
				td #{projName}
			tr
				th Project Repository:
				td #[a(href=full_url) #{full_url}]
			tr
				th Project Description:
				td #{description}
	//
		tbody
			tr
				th Project Name: 
				td(id="project-name") #{projName}
			tr
				th Project Key: 
				td #{projKey}
			tr
				th Project ID: 
				td #{projId}
			tr
				th Project Administrator: 
				td #{projAdmin}
			tr
				th GitHub Repo
				td #{github_repo}
			tr
				th GitHub Owner
				td #{github_owner}
	//
		button(id="btn-proj-list" class="btn btn-primary btn-md" type="submit") List Project
		form(action="deleteproject/" method="POST")
			button(id="btn-proj-del" class="btn btn-primary btn-md" type="submit") Delete Project 
		
	h2 Project History
	each hist in history.reverse()
		h4 #{hist['date']} : #{hist['action']} #[a(href='t/' + hist['link'] +'/') #{hist['link']}] #{hist['description']}
