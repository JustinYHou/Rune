div(style="margin-top: 158px;")
div(class="navbar-fixed-top kanban-board-header")
    div(class="row kanban-board-row kanban-board-row-header")
        each status in statuses
            div(class="kanban-col-header")
                div(class="kanban-col-header-text") #{status}
div(class="container-fluid kanban-board")
    div(class="row kanban-board-row")
        div(class="kanban-col")
            each task in tasks1
                if(email == task.assignedto)
                    div(class="kanban-task-glow-" + userColor)
                        a(href="t/"+task.taskid+"/" class="kanban-task-header js-clamp") #{task.taskid+': '+task.taskname}
                        div(class="kanban-task-body js-clamp") #{task.taskdescription}
                        div(class="kanban-task-tags") Issue Priority:
                            div(class="kanban-priority-icon-" + task.priority)
                                div(id="priority-icon")
                                div(id="priority-text") #{task.priority}
                        div(class="kanban-task-tags") Assignee: #{task.assignedto}
                else
                    div(class="kanban-task")
                        a(href="t/"+task.taskid+"/" class="kanban-task-header js-clamp") #{task.taskid+': '+task.taskname}
