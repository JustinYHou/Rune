extends ./partials/base.jade

block bodyContent 

    div(class="container-fluid")
        div(class="col-sm-12")
            div(class="row")
                div(class="col-sm-3" style="padding-top:24px")
                    div(class="row")
                        img(src="/images/" + picCode + ".png" class="img-rounded" alt="" width="100px" height="100px")
                    div(class="row")
                        h2=fullname
                        h4=email
                        if isMe
                            button(type="button" class="btn btn-primary" disabled) Add to Project
                        else 
                            ul(class="nav nav-stacked")
                                li
                                    div(class="btn-group")
                                        button(class="btn btn-primary dropdown-toggle" data-toggle="dropdown" href="#") Add to Project 
                                            span(class="glyphicon glyphicon-menu-right")
                                        ul(class="dropdown-menu" style="top: 0;left: 100%;")
                                            each proj in projList
                                                li #[a(href="adduser/"+proj['projectid']) #{ proj['projectkey'] }]
                                
                div(class="col-sm-7")
                    //
                        div(class="row")
                            h2(class="col-sm-7") Description
                        div(class="row")
                            h4(class="col-sm-7") description goes here 

                    if userProjects 
                        table(class="table") 
                            thead
                                tr
                                    th Project Name
                            tbody
                                each proj in userProjects
                                    tr
                                        projList
                                        td #[a(href="/p/"+proj['projectid']+'/') #{ proj['projectkey'] }]
                    else
                        p You have no projects! 







                        
            div(class="row" style="height:20px")
            div(class="row")
                div(class="col-xs-2" style="padding:6px; margin:6px; background-color:blue; opacity:0.85; border-radius:8px; color:white")
                    p Project Name
                    p Team Size
                    p Description
                div(class="col-xs-2" style="padding:6px; margin:6px; background-color:green; opacity:0.85; border-radius:8px; color:white")
                    p Project Name
                    p Team Size
                    p Description
                div(class="col-xs-2" style="padding:6px; margin:6px; background-color:orange; opacity:0.85; border-radius:8px; color:white")
                    p Project Name
                    p Team Size
                    p Description
                div(class="col-xs-2" style="padding:6px; margin:6px; background-color:red; opacity:0.85; border-radius:8px; color:white")
                    p Project Name
                    p Team Size
                    p Description
                            
